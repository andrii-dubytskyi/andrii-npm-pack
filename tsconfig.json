{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es2017" ],
    "module": "commonjs",
    "outDir": "./lib",
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "preserveConstEnums": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "sourceRoot": "/",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests/*"],
  "types": [ "typePatches", "reflect-metadata" ]
}
